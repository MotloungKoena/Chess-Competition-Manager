<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Season (10 weeks)"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Week item mock -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:text="Week 1 • Ends: 2025-09-05 • Status: Open"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnWeek1"
                android:text="Open Play List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:text="Week 2 • Ends: 2025-09-12 • Status: Closed"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnWeek2"
                android:text="Open Play List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Floating actions (mocked as buttons) -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fabAddWeek"
                android:text="+ New Week"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/fabAddPlayer"
                android:text="Person+ New Player"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
